{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "module": "node16",
		"moduleResolution": "node16",
		"moduleDetection": "force",
		"target": "ES2021", // Node.js 16
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	}
}
